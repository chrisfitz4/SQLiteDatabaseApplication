<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rainbow_background"
    android:clickable="true">


<!--    -->
    <ImageView
        android:id="@+id/dollarSign_FrameLayout"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_dollarsign"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/receipt_textView_FrameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text= "Wahlburgers"
        android:textSize="40sp"
        android:layout_margin="16dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost: "
            android:textStyle="bold"
            android:textSize="32sp"
            android:layout_weight=".5"
            android:layout_margin="32dp"
            />


        <TextView
            android:id="@+id/receipt_cost_textView_frameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="$100000"
            android:textSize="32sp"
            android:layout_gravity="center"
            android:layout_weight=".5"/>

    </LinearLayout>









</LinearLayout>